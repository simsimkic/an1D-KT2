<Window x:Class="booking.View.Owner.AddAccommodationImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:booking.View.Owner"
        mc:Ignorable="d"
        Title="AddAccommodationImageWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Image url" HorizontalAlignment="Left" Margin="146,0,0,0" VerticalAlignment="Center" Height="38" Width="129"/>
        <TextBox Name="UrlTextBox" HorizontalAlignment="Left" Margin="312,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
        <Button Content="Add Image" HorizontalAlignment="Left" Margin="225,276,0,0" VerticalAlignment="Top" Height="31" Width="93" Click="ConfirmImageClick"/>
        <Button Content="Cancel" HorizontalAlignment="Center" Margin="0,276,0,0" VerticalAlignment="Top" Width="111" Height="31" Click="CancelImageClick"/>

    </Grid>
</Window>
